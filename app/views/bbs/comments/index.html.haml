%article.bbs-topic
  %h1.bbs-topic__title= @topic.title

  .bbs-topic__body= @topic.body

  %ol.bbs-comment-list
    - @comments.each do |comment|
      %li.bbs-comment-item
        %article.bbs-comment
          %h1.bbs-comment__title= comment.title

          .bbs-comment__body= comment.body

  .bbs-pagination
    = paginate @comments

  .bbs-form--vertical
    = form_for [bbs, @topic, Bbs::Comment.new] do |f|
      = f.label :title
      = f.text_field :title

      = f.label :body
      = f.text_area :body

      = f.submit
